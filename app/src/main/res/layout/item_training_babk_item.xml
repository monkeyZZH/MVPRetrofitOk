<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:orientation="vertical">
    <!--title-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/expand_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:text="周一"
            android:textSize="15sp" />

        <Button
            android:layout_width="68dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@color/Pink_main"
            android:text="已完成"
            android:textColor="@color/White"
            android:textSize="11sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gray_main" />
    <!--第一天课程-->
    <RelativeLayout
        android:id="@+id/expand_video_one"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expand_video_one_img"
            android:layout_width="140dp"
            android:layout_height="78dp"
            android:background="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/expand_video_one_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/expand_video_one_img"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/expand_video_one_img"
            android:text="C阶段初级-3天训练"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expand_video_one_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/expand_video_one_name_text"
            android:layout_below="@+id/expand_video_one_name_text"
            android:layout_marginTop="8dp"
            android:text="3分钟"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/expand_video_one_energy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/expand_video_one_time_text"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/expand_video_one_time_text"
            android:text="122千卡"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/expand_video_one_lock_img"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_launcher" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:background="@color/White_training" />
    <!--第二个课程-->
    <RelativeLayout
        android:id="@+id/expand_video_two"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expand_video_two_img"
            android:layout_width="140dp"
            android:layout_height="78dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/expand_video_two_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/expand_video_two_img"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/expand_video_two_img"
            android:text="C阶段初级-3天训练"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expand_video_two_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/expand_video_two_name_text"
            android:layout_below="@+id/expand_video_two_name_text"
            android:layout_marginTop="8dp"
            android:text="3分钟"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/expand_video_two_energy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/expand_video_two_time_text"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/expand_video_two_time_text"
            android:text="122千卡"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/expand_video_two_lock_img"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_launcher" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:background="@color/White_training" />
    <!--文章-->
    <RelativeLayout
        android:id="@+id/expand_article_one"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expand_article_one_img"
            android:layout_width="140dp"
            android:layout_height="78dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/expand_article_one_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_alignTop="@+id/expand_article_one_img"
            android:layout_toRightOf="@+id/expand_article_one_img"
            android:text="今日推荐食谱-瘦身还能尽享美味，简直太赞了！"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expand_article_one_provide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/expand_article_one_name_text"
            android:layout_alignLeft="@+id/expand_article_one_name_text"
            android:text="BY健身厨房提供"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>
