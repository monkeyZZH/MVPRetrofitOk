<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:paddingTop="15dp"
    android:paddingLeft="36dp"
    android:paddingRight="36dp"
    android:paddingBottom="12dp">
    <ImageView
        android:id="@+id/comment_img"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@mipmap/ic_launcher"
        android:layout_marginRight="8dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/comment_img">
        <TextView
            android:id="@+id/user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柠檬爱吃糖"
            android:textColor="@color/Black_a"
            android:textSize="13sp"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:id="@+id/user_name_mood"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toRightOf="@+id/user_name_text"
            android:background="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/user_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_text"
            android:text="20分钟前"
            android:textColor="@color/Black_b"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/user_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_time_text"
            android:text="努力，为了更好的自己！"
            android:textSize="12sp"
            android:textColor="@color/Black_a"/>
        <ImageView
            android:id="@+id/love_img"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_toLeftOf="@+id/love_quantity_text"
            android:layout_alignBottom="@+id/user_time_text"
            android:background="@mipmap/like_2x"/>
        <TextView
            android:id="@+id/love_quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/user_time_text"
            android:gravity="center"
            android:text="1"
            android:textSize="10sp"
            android:textColor="@color/Black_a"/>
    </RelativeLayout>
</RelativeLayout>